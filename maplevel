<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>amap缩放级别不连续</title>
    <style>
        #container {
            width: 600px;
            height: 400px;
        }
    </style>
    <!--引入高德地图JSAPI-->
    <script src="https://webapi.amap.com/maps?v=1.4.15&key=您申请的key值"></script>
</head>
<body>
    <!--创建地图容器-->
    <div id="container"></div>
    <script>
        //初始化地图
        var map = new AMap.Map('container', {
            zooms: [10, 15], //设置地图缩放级别范围为10-15
            zoom: 10 //设置地图初始化缩放级别为10
        });
        //监听地图缩放事件
        map.on('zoomend', function() {
            var currentZoom = map.getZoom(); //获取当前缩放级别
            if (currentZoom > 10 && currentZoom < 13) {
                map.setZoom(13); //如果缩放到10-13之间，自动跳到13
            } else if (currentZoom > 13 && currentZoom < 15) {
                map.setZoom(15); //如果缩放到13-15之间，自动跳到15
            }
        });
    </script>
</body>
</html>
